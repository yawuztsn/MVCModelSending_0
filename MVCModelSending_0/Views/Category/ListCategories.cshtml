@model CategoryVM
@{
    ViewBag.Title = "ListCategories";
}

<div class="jumbotron">
 Kategori Listesi... Kategori eklemek için @Html.ActionLink("tıklayınız","AddCategory")   
</div>

<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Kategori ID</th>
                <th>Kategori Ismi</th>
                <th>Kategori Açıklaması</th>
                <th colspan="2" style="text-align:center">Islemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Category item in Model.Categories)
            {
                <tr>
                    <td>@item.CategoryID</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td>@Html.ActionLink("Güncelle", "UpdateCategory", new { id = item.CategoryID }, new { @class = "btn btn-warning" })</td>
                    <td>@Html.ActionLink("Sil", "DeleteCategory", new { id = item.CategoryID }, new { @class = "btn btn-danger" })</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>Isim</th>
            <th>SoyIsim</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Employee item in Model.Employees)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
            </tr>
        }
    </tbody>
</table>

